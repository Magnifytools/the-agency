# The Agency - Development Environment Variables
# Copy to .env and fill in values.
# For production, use .env.production.example as base.

# Database
DATABASE_URL=postgresql+asyncpg://agency:agency@localhost:5432/the_agency

# Security
SECRET_KEY=generate-a-strong-random-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=480
ALGORITHM=HS256

# Cookies (dev defaults)
AUTH_COOKIE_NAME=agency_access_token
CSRF_COOKIE_NAME=agency_csrf_token
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAMESITE=lax
AUTH_COOKIE_DOMAIN=
AUTH_COOKIE_PATH=/

# CORS
CORS_ORIGINS=http://localhost:5177

# Optional integrations
REDIS_URL=
DISCORD_WEBHOOK_URL=
ANTHROPIC_API_KEY=

# Holded ERP API key (optional â€” enables finance sync)
HOLDED_API_KEY=

# Defaults
DEFAULT_HOURLY_RATE=40.0

# Railway sets PORT automatically
PORT=8004
